      "@school-book-storage/users/list": [
        "libs/school-book-storage/users/feature/list/src/index.ts"
      ],
      "@school-book-storage/users/shell": [
        "libs/school-book-storage/users/feature/shell/src/index.ts"
      ],
      "@school-book-storage/schools/data-access": [
        "libs/school-book-storage/schools/data-access/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
