      "@school-book-storage/auth/register": [
        "libs/school-book-storage/auth/feature/register/src/index.ts"
      ],
      "@school-book-storage/shared/auth-guard": [
        "libs/school-book-storage/shared/guards/auth-guard/src/index.ts"
      ],
      "@school-book-storage/shared/password-validator": [
        "libs/school-book-storage/shared/validators/password-validator/src/index.ts"
      ],
      "@school-book-storage/shell": [
        "libs/school-book-storage/shell/feature/shell/src/index.ts"
      ],
      "@school-book-storage/shell/layout": [
        "libs/school-book-storage/shell/feature/layout/src/index.ts"
